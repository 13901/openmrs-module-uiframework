		<property name="additionalViewProviders">
			<map>
                <entry key="testing-groovy">
                    <bean class="org.openmrs.ui2.core.fragment.GroovyFragmentViewProvider">
                        <property name="templateDirectory" value="src/test/webapp/WEB-INF/fragments"/>
                    </bean>
                </entry>
			</map>
		</property>

	</bean>
	
	<!-- Conversion Service -->
	<bean id="conversionService" class="org.springframework.context.support.ConversionServiceFactoryBean">
		<property name="converters">
			<list>
				<bean class="org.openmrs.ui2.core.converter.StringToFormConverter"/>
				<bean class="org.openmrs.ui2.core.converter.StringToLocationConverter"/>
				<bean class="org.openmrs.ui2.core.converter.StringToPatientIdentifierConverter"/>
				<bean class="org.openmrs.ui2.core.converter.StringToPatientIdentifierTypeConverter"/>
				<bean class="org.openmrs.ui2.core.converter.StringToPersonAttributeConverter"/>
				<bean class="org.openmrs.ui2.core.converter.StringToPersonAttributeTypeConverter"/>
				<bean class="org.openmrs.ui2.core.converter.StringToEncounterConverter"/>
				<bean class="org.openmrs.ui2.core.converter.StringToEncounterTypeConverter"/>
                <bean class="org.openmrs.ui2.core.converter.StringToRelationshipTypeConverter"/>
				<bean class="org.openmrs.ui2.core.converter.StringToUserConverter"/>
				<bean class="org.openmrs.ui2.core.converter.StringToPatientConverter"/>
				<bean class="org.openmrs.ui2.core.converter.StringToPersonConverter"/>
				<bean class="org.openmrs.ui2.core.converter.StringToDateConverter"/>
				<bean class="org.openmrs.ui2.core.converter.StringToRelationshipConverter"/>
				<bean class="org.openmrs.ui2.core.converter.StringToProgramConverter"/>
				<bean class="org.openmrs.ui2.core.converter.StringToConceptConverter"/>
				<bean class="org.openmrs.ui2.core.converter.StringToPatientProblemConverter"/>
				<bean class="org.openmrs.ui2.core.converter.OpenmrsObjectToStringConverter"/>
				<bean class="org.openmrs.ui2.core.converter.MultipartFileToInputStreamConverter"/>
				<bean class="org.openmrs.ui2.core.converter.PatientToSimpleObjectConverter"/>
                <bean class="org.openmrs.ui2.core.converter.PatientIdentifierToSimpleObjectConverter"/>
                <bean class="org.openmrs.ui2.core.converter.OpenmrsMetadataToSimpleObjectConverter"/>
                <bean class="org.openmrs.ui2.core.converter.OpenmrsObjectToSimpleObjectConverter"/>
			</list>
		</property>
	</bean>
	
	<!-- A basic implementation of UiUtils that can be autowired into other beans -->
	<bean id="uiUtils" class="org.openmrs.ui2.core.BasicUiUtils" init-method="init"/>
	
	<bean id="uiSessionFactory" class="org.openmrs.ui2.core.session.SessionFactory"/>

</beans>
